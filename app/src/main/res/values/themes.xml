<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NovaModa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <!--        System Ui configuration-->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/m_gray</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.NovaModa" parent="Base.Theme.NovaModa" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/g_white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/novamoda_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NovaModa</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>


    <style name="authInputTil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="authInput">
        <item name="android:layout_width">@dimen/_343dp</item>
        <item name="android:layout_height">@dimen/_64dp</item>
        <item name="android:background">@drawable/desgin_edittext</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/_5dp</item>
    </style>


    <style name="buttonSocial">
        <item name="android:layout_width">@dimen/_343dp</item>
        <item name="android:layout_height">@dimen/_57dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- Change toolbar background color -->
        <item name="android:textColor">@color/primary_color</item>
        <!-- Change title text color -->
        <item name="android:titleTextAppearance">@style/AppToolbarTitle</item>
    </style>

    <style name="AppToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Change title font family -->
        <item name="android:fontFamily">@font/poppins_thin</item>
    </style>

    <style name="button_style">
        <item name="android:textColor">@color/primary_color</item>
        <item name="backgroundTint">@color/g_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style3" parent="button_style2">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:radius">10dp</item>

    </style>

    <style name="button_style2">
        <item name="android:textColor">@color/primary_color</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>